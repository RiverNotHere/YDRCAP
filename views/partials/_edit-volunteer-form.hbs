<!-- Record Container -->
{{#if user}}
  <div class="record-container">

    <!-- Title & Edit Button -->
    <div class="row">
      <div class="col l12 m12 s12">
        <span class="record-title">Edit Account</span>
      </div>
    </div>

    <form method="POST" action="/a/edit-account?id={{user._id}}&type=volunteer" id="edit-account-form">
      <!-- Record Info -->
      <div class="row">
        <div class="col l5 m5 s5">
          <label>Userid:</label>
          <input type="text" disabled value="{{user.userid}}">
        </div>
        <div class="col l5 m5 s5">
          <label>Username:</label>
          <input type="text" disabled value="{{user.username}}">
        </div>
        <div class="col l2 m2 s2">
          <label>Total Hours:</label>
          <input type="text" disabled value="{{user.total_hours}}">
        </div>
      </div>

      <div class="row">
        <div class="col l6 m6 s6">
          <label>Email Address:</label>
          <input type="text" name="email" value="{{user.email}}">
        </div>
        <div class="col l3 m3 s3">
          <label>Birth Year:</label>
          <input type="number" name="birth_year" value="{{user.birth_year}}">
        </div>
        <div class="col l3 m3 s3">
          <label>Birth Month:</label>
          <input type="number" name="birth_month" value="{{user.birth_month}}">
        </div>
      </div>

      <div class="row">
        <div class="col l4 m4 s12">
          <label>First Name:</label>
          <input type="text" name="first_name" value="{{user.first_name}}">
        </div>
        <div class="col l4 m4 s12">
          <label>Middle Name:</label>
          <input type="text" name="middle_name" value="{{user.middle_name}}">
        </div>
        <div class="col l4 m4 s12">
          <label>Last Name:</label>
          <input type="text" name="last_name" value="{{user.last_name}}">
        </div>
      </div>
    </form>

    <!-- Footer -->
    <div class="dfooter row">
      <button class="btn blue" onclick="window.location.href = '/u/{{user._id}}?type=volunteer'"><i class="material-icons left">arrow_back</i>Back</button>
      <button type="submit" form="edit-account-form" class="btn"><i class="material-icons left">save</i>Save</button>
    </div>

  </div>
{{/if}}
